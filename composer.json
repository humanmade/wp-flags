{
    "name": "humanmade/wp-flags",
    "description": "Lightweight WordPress plugin to enable exposing feature flags to end-users, based on code-based ( or admin UI in the future ) criteria.",
    "type": "wordpress-plugin",
    "license": "MIT",
    "minimum-stability":"dev",
    "authors": [
        {
            "name": "Shady Sharaf",
            "email": "shady@sharaf.me"
        },
        {
            "name": "Human Made",
            "email": "hello@humanmade.com"
        }
    ],
    "support": {
        "issues": "https://github.com/humanmade/wp-flags/issues",
        "source": "https://github.com/humanmade/wp-flags"
    },
    "require": {
        "php": ">=7.2",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "humanmade/coding-standards": "^1.2"
    },
    "scripts": {
        "lint": "vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcs.ruleset.xml ./",
        "lint:fix": "vendor/squizlabs/php_codesniffer/bin/phpcbf --standard=phpcs.ruleset.xml -q -s"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
